					<h5><spring:message code="menu_item_signbook_list_label" /></h5>
				</div>
			</div>
    	</div>
		<div class="card-body">
	    	<page:list id="pl_org_esupportail_esupsignature_domain_SignBook" items="${signbooks}" z="user-managed">

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">	
	<bean id="ldapUserDetailsService"
		class="org.springframework.security.ldap.userdetails.LdapUserDetailsService">
		<constructor-arg>
			<bean
				class="org.springframework.security.ldap.search.FilterBasedLdapUserSearch">
				<constructor-arg>
					<value>ou=people</value>
				</constructor-arg>
				<constructor-arg>
					<value>(uid={0})</value>
				</constructor-arg>
				<constructor-arg ref="ldapContextSource" />
			</bean>
		</constructor-arg>
		<constructor-arg ref="casLdapAuthoritiesPopulator" />
	</bean>

	<bean id="casLdapAuthoritiesPopulator"
		class="org.esupportail.esupsignature.security.cas.CasLdapAuthoritiesPopulator">
		<constructor-arg ref="ldapContextSource" />
		<constructor-arg value="ou=groups" />
		<property name="mappingGroupesRoles">
			<map>
				<entry key="ROLE_FOR.ESUP-SIGNATURE.ADMIN" value="ROLE_ADMIN" />
				<entry key="ROLE_FOR.ESUP-SIGNATURE.MANAGER" value="ROLE_MANAGER" />
			</map>
		</property>
	</bean>
	<!-- 
	<bean id="shibAuthUserDetailsService"
		class="org.esupportail.esupsignature.security.shib.ShibAuthenticatedUserDetailsService">
		<property name="mappingGroupesRoles">
			<map>
				<entry key="cn=for.esup-signature.admin,ou=groups,dc=univ-ville,dc=fr" value="ROLE_ADMIN" />
				<entry key="cn=for.esup-signature.manager,ou=groups,dc=univ-ville,dc=fr" value="ROLE_MANAGER" />
			</map>
		</property>
	</bean>
	 -->
		<bean id="shibAuthUserDetailsService"
                class="org.esupportail.esupsignature.security.shib.ShibAuthenticatedUserDetailsService">
                <property name="mappingGroupesRoles" ref="mappingGroupesRoles"/>
                <property name="group2UserRoleService" ref="group2UserRoleService"/>
        </bean>
        
        <bean id="group2UserRoleService"
                class="org.esupportail.esupsignature.security.Group2UserRoleService">
                <property name="mappingGroupesRoles" ref="mappingGroupesRoles"/>
                <property name="groupService" ref="groupService"/>
        </bean>

        <bean id="groupService" class="org.esupportail.esupsignature.security.SpelGroupService">
          <property name="groups4eppnSpel">
            <map>
              <entry key="group_admin" value="#eppn=='user1@univ-ville.fr' or #eppn=='user2@univ-ville.fr'"/>
              <entry key="group_manager" value="true"/>
            </map>
          </property>
        </bean>

        <util:map id="mappingGroupesRoles">
	        <entry key="group_admin" value="ROLE_ADMIN" />
	        <entry key="group_manager" value="ROLE_MANAGER" />
        </util:map>


</beans>
